%h1 Listing favorite_items

%table
  %thead
    %tr
      %th Favorite
      %th User
      %th
      %th
      %th

  %tbody
    - @favorite_items.each do |favorite_item|
      %tr
        %td= favorite_item.favorite
        %td= favorite_item.user
        %td= link_to t('.show'), favorite_item
        %td= link_to t('.edit'), edit_favorite_item_path(favorite_item)
        %td= link_to t('.destroy'), favorite_item, :method => :delete, :data => { :confirm => t('.confirm') }

%br

= link_to t('.new'), new_favorite_item_path
