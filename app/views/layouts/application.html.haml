!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %meta{"http-equiv" => "X-UA-Compatible", :content => "IE=edge"}/
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1"}/

    %title Savvspace

    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags

  %body{class: controller.controller_name, id: controller.action_name}
    - if flash[:notice].present?
      #growl.growl.app-growl
        .alert.alert-dark.alert-dismissable{role: "alert"}
          %button.close{"data-dismiss" => "alert", "aria-label" => "Close"}
            %span{"aria-hidden" => "true"} x
          = notice

    = render "layouts/navbar"
    #container= yield

    = javascript_include_tag '/dist/toolkit.min.js', 'data-turbolinks-track' => true
