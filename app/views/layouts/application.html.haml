!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %meta{"http-equiv" => "X-UA-Compatible", :content => "IE=edge"}/
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1"}/

    %title Savvspace

    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = stylesheet_link_tag    '//fonts.googleapis.com/css?family=Open+Sans:400,300,600'
    = javascript_include_tag "https://maps.googleapis.com/maps/api/js?key=#{ENV['GOOGLE_MAPS_KEY']}"
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = cloudinary_js_config
    = csrf_meta_tags
    = render 'application/favicon'

  %body{class: [controller.controller_name, (user_signed_in? ? 'authenticated' : 'guest')], id: controller.action_name}
    - if flash[:notice].present?
      #growl.growl.app-growl
        .alert.alert-dark.alert-dismissable{role: "alert"}
          %button.close{"data-dismiss" => "alert", "aria-label" => "Close"}
            %span{"aria-hidden" => "true"} x
          = notice

    = render "layouts/navbar"
    #container= yield
    = render "layouts/bottom_links"

    = javascript_include_tag '/dist/toolkit.min.js', 'data-turbolinks-track' => true
