.modal-dialog.modal-sm{role: 'document'}
  .modal-content
    .modal-header
      %button.close{'aria-label' => 'Close', 'data-dismiss' => 'modal', type: 'button'}
        %span{'aria-hidden' => 'true'} Ã—
      %h4.modal-title Sending E-mail To:
    .modal-actions
      .modal-body
        = simple_form_for(:mailer, url: url, method: :post, remote: true) do |f|
          = f.input :recepients, as: :text, label: 'To:', placeholder: 'Enter email addresses (separate by comma)'
          = f.input :include_sender, as: :boolean, label: 'Send me a copy of this Email', input_html: { checked: true }

          %button.btn-link.modal-action{'data-dismiss' => 'modal', type: 'button'} Cancel
          %button.btn-link.modal-action{type: 'submit'}
            %strong
              %span.icon.icon-paper-plane
              Send
