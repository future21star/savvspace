.row
  .col-md-8.col-md-offset-2
    .panel.panel-default.panel-profile
      .panel-heading{background_image_url(@profile.background)}
      .panel-body.text-center
        - if @profile.avatar
          = cl_image_tag(@profile.avatar.path, class: "panel-profile-img", crop: :thumb, gravity: :face, height: 100, width: 100)

        %h5.panel-title= @profile.name
        %p.m-b-d= @profile.bio
        %p= render :partial => "common/rating", locals: {rateable: @profile}

        .social-links
          %h2
            - if @profile.contact_email.present?
              %a.icon.icon-mail-with-circle{href: "mailto:" + @profile.contact_email, title: "E-Mail"}

            = facebook_link(@profile.facebook)
            = instagram_link(@profile.instagram)
            = twitter_link(@profile.twitter)
            = linked_in_link(@profile.linked_in)

        .action-links
          - if @profile.authorized_for_edit?(current_user)
            = link_to(edit_profile_path(@profile), class: "btn btn-sm btn-default") do
              %span.icon.icon-edit
              Edit
