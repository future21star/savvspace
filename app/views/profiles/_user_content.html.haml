- case @tab
- when "articles"
  #articles
    - if @profile.profiled.respond_to?(:authored_articles)
      - @profile.profiled.authored_articles.in_groups_of(3, false) do |group|
        .row
          - group.each do |article|
            .col-md-4
              = render(partial: "articles/article_preview", object: article)

- when "businesses"
  #vendorships
    - user_profile_vendorships(@profile.profiled).each do |vendor|
      %div.media[vendor]
        .media-left
          - if vendor.profile.avatar
            = link_to(cl_image_tag(vendor.profile.avatar.path, class: "media-object", width: 64, height: 64, crop: :fill), vendor.profile)
          - else
            = link_to(image_tag("blank-profile.png", class: "media-object", width: 64, height: 64), vendor.profile)

        .media-body
          %h4.media-heading= link_to(vendor.name, vendor.profile)
          %p.summary= vendor.profile.bio
- when "properties"
  #properties
    .property-search.m-b
      = render partial: "property_searches/form"

    #property-list
      - @properties = PropertySearch.new(mls_server: MlsServer.first).results
      = render partial: "property_searches/index", locals: {properties: @properties, referrer_id: referrer_id}

- when "open_houses"
  #open_houses
    .property-search.m-b
      = render partial: "open_house_searches/form"

    #property-list
      - @properties = OpenHouseSearch.new(mls_server: MlsServer.first).results
      = render partial: "open_house_searches/index", locals: {properties: @properties}
