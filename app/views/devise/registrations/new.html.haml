.container.m-y-lg
  .container-content-middle
    = form_for(resource, as: resource_name, url: registration_path(resource_name), html: {role: 'form', class: 'm-x-auto text-center app-login-form'}) do |f|
      %h1 Sign Up
      = devise_error_messages!
      .form-group
        = f.email_field :email, autofocus: true, placeholder: 'Email Address'
      .form-group
        = f.password_field :password, autocomplete: 'off', placeholder: 'Password'
      .form-group
        = f.password_field :password_confirmation, autocomplete: 'off', placeholder: 'Password Confirmation'
      .actions
        = f.submit 'Sign Up'

      %footer.screen-login
        = link_to 'Already have an account?', new_user_session_path

    /
      = render 'devise/shared/links'
