.container.m-y-lg
  .container-content-middle
    = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, role: 'form', class: 'm-x-auto text-center app-login-form' }) do |f|
      %h2
        Edit #{resource_name.to_s.humanize}
      = devise_error_messages!
      .form-group
        = f.email_field :email, autofocus: true, placeholder: 'Email Address'
      - if devise_mapping.confirmable? && resource.pending_reconfirmation?
        %div
          Currently waiting confirmation for: #{resource.unconfirmed_email}
      %i (leave blank if you don't want to change it)
      .form-group
        = f.password_field :password, autocomplete: 'off', placeholder: 'Password'
        - if @minimum_password_length
          %br
          %em
            = @minimum_password_length
            characters minimum
      .form-group
        = f.password_field :password_confirmation, autocomplete: 'off', placeholder: 'Password Confirmation'
      %i (we need your current password to confirm your changes)
      .form-group
        = f.password_field :current_password, autocomplete: 'off', placeholder: 'Current Password'
      .actions
        = f.submit 'Update'

  %hr
  .text-center
    %h3 Cancel my account
    %p
      Unhappy? #{button_to 'Cancel my account', registration_path(resource_name), data: { confirm: 'Are you sure?' }, method: :delete}
    = link_to 'Back', :back
