.container.m-y-lg
  .container-content-middle
    = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, role: 'form', class: 'm-x-auto text-center app-login-form' }) do |f|
      %h2 Change your password
      = devise_error_messages!
      = f.hidden_field :reset_password_token
      - if @minimum_password_length
        %em
          (#{@minimum_password_length} characters minimum)
        %br
      .form-group
        = f.password_field :password, autocomplete: 'off', placeholder: 'New password', autocomplete: 'off'
      .form-group
        = f.password_field :password_confirmation, autocomplete: 'off', placeholder: 'Confirmation New Password', autocomplete: "off"
      .actions
        = f.submit 'Change my password'

      %footer.screen-login
        = render 'devise/shared/links'
