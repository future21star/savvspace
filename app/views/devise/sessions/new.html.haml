- has_error = flash[:alert].present?

.container-content-middle{class: has_error ? 'has-error' : nil}
  = form_for(resource, as: resource_name, url: session_path(resource_name), html: {role: 'form', class: 'm-x-auto text-center app-login-form'}) do |f|
    = link_to(image_tag('savvspace-logo-with-tag.jpg'), '/', class: 'app-brand m-b-lg')
    - if has_error
      .alert.alert-danger{role: 'alert'}
        %p
          = glyphicon('exclamation-sign')
          = flash[:alert]
    .form-group
      = f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'Email Address'
    .form-group
      = f.password_field :password, autocomplete: 'off', class: 'form-control', placeholder: 'Password'
    - if false # devise_mapping.rememberable?
      .field
        = f.check_box :remember_me
        = f.label :remember_me
    .actions
      = f.submit 'Log In', id: 'login'

    %footer.screen-login
      = link_to 'Create an Account', new_registration_path(resource_name), class: 'text-muted', id: 'signup'
      = link_to 'Recover Account', new_password_path(resource_name), class: 'text-muted'
  /
    = render 'devise/shared/links'
