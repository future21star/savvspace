.container.m-y-lg
  .container-content-middle
    = simple_form_for([@feature, @feature_request], html: {role: 'form', class: 'm-x-auto text-center app-login-form'}) do |f|
      %h2= title
      %p.description= desc
      = f.error_notification

      = f.input :feature_id, as: :hidden
      = f.input :agent_name, as: :string, label: false, placeholder: t('feature_requests.shared.placeholder.agent_name')
      = f.input :broker_name, as: :string, label: false, placeholder: t('feature_requests.shared.placeholder.broker_name')
      = f.input :broker_email, as: :email, label: false, placeholder: t('feature_requests.shared.placeholder.broker_email')

      .actions
        = f.button :submit, t('feature_requests.shared.submit')
